<h4>{{model.title}} by user {{model.userId}}</h4>
{{#if isEditing}}
<form {{action 'saveReview' on="submit"}}>
{{textarea value=model.text placeholder="Text" class="edit-textarea"}}<br/><br/>
<button type="submit" class="btn btn-primary save-button">Save</button>
</form>
{{else}}
<p {{action "editReview" on="doubleClick"}} class="text"> {{model.text}}</p>
{{/if}}
<p class="time">
  Updated: {{model.updatedAt}}
  <br>
  Created: {{model.createdAt}}
</p>
<button {{action "removeReview"}} class="destroy btn btn-primary left-button">Delete</button>